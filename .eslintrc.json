{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": ["error", {"allowIndentationTabs":true}],
        "semi": ["error", "always"],
        "vue/multi-word-component-names": "off"
    }
}
